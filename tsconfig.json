{
  "compilerOptions": {
    "module": "esnext",                        
    "target": "es2022",                        
    "moduleResolution": "node",                
    "rootDir": "./",                             
    "outDir": "./dist",                          
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,
    "strict": true,                            
    "skipLibCheck": true                         
  },
  "include": ["**/*.ts"],                        
  "exclude": ["node_modules", "dist"]            
}
